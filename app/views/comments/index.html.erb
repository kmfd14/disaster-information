<body>
  <div id="comments-container" class="comments-container">
    <h1>Title <%= @post.title %></h1>
    <h2>Comments</h2>
    <% @comments.each do |comment| %>
      <%= comment.content %>(<%= comment.created_at %>) by 
      <%= comment.user&.email %>
      <div class='comment-ctrl'>
        <%= link_to 'Edit', edit_post_comment_path(@post, comment), class:'btn btn-secondary' if user_signed_in? && comment.user == current_user %>
        <%= button_to 'Delete', post_comment_path(@post, comment), method: :delete, class:'btn btn-danger' if user_signed_in? && comment.user == current_user %>
      </div>
    <% end %>
  </div>
</body>

